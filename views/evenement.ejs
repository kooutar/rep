<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        .navbar {
            background-color: #333;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .navbar a {
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .navbar a:hover {
            background-color: #575757;
        }

        .navbar-right {
            margin-left: auto;
        }

        form {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
        }

        form input[type="text"],
        form input[type="date"],
        form input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        form input[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        form input[type="submit"]:hover {
            background-color: #45a049;
        }

        form input[type="file"] {
            padding: 3px;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/admin">Ajouter Actualité</a>
        <a href="#">Ajouter Événement</a>
        <a href="/liste-des-candidatures">Liste des Candidatures</a>
        <a href="/login" class="navbar-right">Déconnexion</a>
    </div>
    <div class="fromulaire">
        <h2>evenements</h2>
    <form action="/event" method="post" enctype="multipart/form-data">
        <input type="text" id="titre" name="titre" placeholder="titre">
        <input type="text" id="discription" name="discription" placeholder="discription">
        <label for="date_debut">Date de début :</label>
        <input type="date" src="" alt=""  id="date_debut" name="date_debut">
        <label for="date_fint">Date de fin :</label>
        <input type="date" src="" alt=""  id="date_fin" name="date_fin">
        <input type="text" id="lieu" name="lieu" placeholder="lieu">
        <input type="file" id="imgevent" name="imgevent" accept="image/*">
        <input  type="submit" value="enregister">
    </form>
</div>
<script>
    // Empêcher la sélection de dates passées pour la date de début
    const dateDebutInput = document.getElementById('date_debut');
    const dateFinInput = document.getElementById('date_fin');
    
    // Obtenir la date d'aujourd'hui au format YYYY-MM-DD
    const today = new Date().toISOString().split('T')[0];
    dateDebutInput.setAttribute('min', today);

    // Mettre à jour la date minimale de fin en fonction de la date de début sélectionnée
    dateDebutInput.addEventListener('change', function() {
        dateFinInput.value = ''; // Réinitialiser le champ date_fin
        dateFinInput.setAttribute('min', this.value);
    });
</script>
</body>
</html>